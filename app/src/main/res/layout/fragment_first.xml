<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <EditText
        android:id="@+id/editTextFeedUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter RSS Feed URL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddFeed"
        app:layout_constraintHorizontal_weight="1"
        android:inputType="textUri"/>

    <Button
        android:id="@+id/buttonAddFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Feed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextFeedUrl"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFeeds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextFeedUrl"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>